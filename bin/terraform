#!/bin/bash
set -euo pipefail

if [ -t 0 ] && [ -t 1 ]; then
  it_opts=("-it")
else
  it_opts=()
fi

# ${arr[@]+"${arr[@]}"} -> https://stackoverflow.com/a/61551944/46070
exec docker run --rm ${it_opts[@]+"${it_opts[@]}"} \
  -v "$HOME:/infrah/home" -e "HOME=/infrah/home" \
  -v "$PWD/infra:/data" --workdir /data \
  -e AWS_PROFILE -e AWS_ACCESS_KEY_ID -e AWS_SECRET_ACCESS_KEY \
  hashicorp/terraform:0.14.7 "$@"
